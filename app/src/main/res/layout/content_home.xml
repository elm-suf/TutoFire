<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Home"
    android:id="@+id/container_home"
    tools:showIn="@layout/app_bar_home">

    <ImageButton
        android:id="@+id/home_btn_course"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="144dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/home_teachers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/translator" />

    <ImageButton
        android:id="@+id/home_teachers"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="144dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/home_reservations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_btn_course"
        tools:src="@drawable/work" />

    <ImageButton
        android:id="@+id/home_reservations"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="120dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_teachers"
        tools:src="@drawable/calendar" />
</android.support.constraint.ConstraintLayout>